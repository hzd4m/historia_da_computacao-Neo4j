## Arquivo de exemplo .env
# Copie para `.env` e preencha os valores reais (sem aspas).
# NUNCA commitar `.env`.

# Chave Ollama Cloud
OLLAMA_API_KEY=COLE_AQUI_SUA_OLLAMA_API_KEY

# Bridge local -> porta alternativa para evitar conflito com Ollama local em 11434
OLLAMA_BRIDGE_HOST=0.0.0.0
OLLAMA_BRIDGE_PORT=11435
OLLAMA_LOCAL_UPSTREAM=http://127.0.0.1:11434
OLLAMA_REMOTE_URL=https://ollama.com
OLLAMA_REMOTE_MODELS_TTL=120
OLLAMA_BRIDGE_DEBUG=false

# Mapa de modelos remotos (JSON):
# chave = modelo solicitado localmente
# valor = lista de fallback no remoto (ordem de tentativa)
OLLAMA_MODEL_MAP_JSON='{"gpt-oss:120b":["gpt-oss:120b","glm-5"]}'

# Neo4j
NEO4J_AUTH=neo4j/password
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
